---
import Header from "../components/common/Header.jsx"
import Footer from "../components/common/Footer.astro"
import Head from "../components/common/Head.astro"
import Works from "../components/home/Works.astro"
import Strategy from "../components/home/Strategy.astro"
import BehindLens from "../components/home/BehindLens.astro"
import Introduction from "../components/home/Introduction.astro"
---

<html lang="en">
	<Head />
	<body>
		<Header
			pathname= { Astro.url.pathname }
			client:load
		/>
		<section class="mt-36 container xl:max-w-7xl lg:max-w-6xl mx-auto py-20">
			<Introduction />
		</section>
		<section class="mt-36 container xl:max-w-7xl lg:max-w-6xl mx-auto py-20">
			<Works />
		</section>
		<section class="bg-zinc-800">
			<section class="container xl:max-w-7xl lg:max-w-6xl mx-auto">
				<Strategy />
			</section>
		</section>
		<section class="container xl:max-w-7xl lg:max-w-6xl mx-auto">
			<BehindLens />
		</section>
		<Footer />
	</body>
</html>

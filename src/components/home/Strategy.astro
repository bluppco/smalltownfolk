---
import H1 from "../common/atom/H1.astro"
import H2 from "../common/atom/H2.astro"
import H6 from "../common/atom/H6.astro"
import Paragraph from "../common/atom/Paragraph.astro"
import { SERVICES } from "../../constants"
---
<div class="grid grid-cols p-4 md:p-0 gap-20 md:py-40">
    <div class="flex flex-col gap-4">
        <H1
            text="Strategy + Creative"
            primary={ true }
        />
        <Paragraph
            text="At Small Town Folk, we create exceptional brand experiences by approaching projects in a thoughtful way. We help businesses create core brand assets and launch brands, products, campaigns and bespoke brand experiences."
            light={ true }
        />
        <Paragraph
            text="Bringing multidisciplinary ideas to life and creating timeless brand stories is at the core of who we are."
            light={ true }
        />
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-2 md:gap-8">
        <div>
            <H2
                text="Services"
                primary={ true }
            />
        </div>
        <div class="flex flex-col gap-2">
            {

                SERVICES[0].map( ( service ) => {

                    return (
                        <H6
                            text={ service }
                            light={ true }
                        />
                    )
                })

            }
        </div>
        <div class="flex flex-col gap-2">
            {

                SERVICES[1].map( ( service ) => {

                    return (
                        <H6
                            text={ service }
                            light={ true }
                        />
                    )

                })

            }
        </div>
    </div>
    <div class="hidden md:block">
        <img
            src="https://blupp.b-cdn.net/smalltownfolk/smalltownfolk-clients.png?quality=100"
            class="object-fit w-full"
        />
    </div>
    <div class="block md:hidden">
        <img
            src="https://blupp.b-cdn.net/smalltownfolk/smalltownfolk-clients-m.png?quality=100"
            class="object-fit w-full"
        />
    </div>
</div>
